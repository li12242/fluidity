<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE testproblem SYSTEM "regressiontest.dtd">

<testproblem>
  <name>lagrangian_detectors</name>
  <owner userid="colin"/>
  <tags>flml</tags>
  <problem_definition length="short" nprocs="1">
    <command_line>
mpiexec -n 4 ../../bin/fluidity -v3 -l lagrangian_detectors.flml
    </command_line>
  </problem_definition>
  <variables>
    <variable name="last_locations" language="python">
from fluidity_tools import stat_parser
from numpy import shape
s = stat_parser("lagrangian_detectors.detectors")
Locations = s["Steve"]["position"]
last_locations = Locations[:,-1]
    </variable>
  </variables>
  <pass_tests>
    <test name="CorrectLagrangianTrajectory" language="python">
assert max(abs(last_locations-[ 0.249932,  0.497886])) &lt; 1.0e-3
    </test>
  </pass_tests>
  <warn_tests>
  </warn_tests>
</testproblem>
