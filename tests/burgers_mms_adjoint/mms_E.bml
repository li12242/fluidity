  <adjoint>
    <functional_derivative>
      <algorithm name="functional_derivative">
        <string_value lines="20" type="python">from math import sin, pi, cos, exp, sqrt
import numpy

coord  = states[n]["Fluid"].vector_fields["Coordinate"]
du = derivatives["FluidDerivatives"].scalar_fields["VelocityDerivative"]

f = numpy.zeros(du.node_count)
for i in range(du.node_count):
  x = coord.node_val(i)[0]
  f[i] = 0.01125*pi**2*sin((3.0/20)*(x + 10)*pi) - 0.0375*sqrt(pi)*sqrt(2)*exp((-1.0/2)*x**2)*cos((3.0/20)*(x + 10)*pi)

# And we need to multiply that by the mass matrix
for ele in range(du.element_count):
  t = Transform(ele, coord)
  m = t.shape_shape(du.ele_shape(ele), du.ele_shape(ele))
  du.addto(du.ele_nodes(ele), numpy.dot(m, f[du.ele_nodes(ele)]))</string_value>
      </algorithm>
