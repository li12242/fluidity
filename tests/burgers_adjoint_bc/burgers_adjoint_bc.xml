<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE testproblem SYSTEM "regressiontest.dtd">
<testproblem>
  <name>Burgers Equation BC</name>
  <owner userid="pef"/>
  <tags>burgers</tags>
  <problem_definition length="special" nprocs="1">
    <command_line>burgers_equation adjoint_bc.bml</command_line>
  </problem_definition>
  <variables>
    <variable name="forward_error" language="python">
from fluidity_tools import stat_parser as stat
forward_error = stat("bc.stat")["Fluid"]["VelocityError"]["l2norm"][-1]
    </variable>
    <variable name="adjoint_error" language="python">
from fluidity_tools import stat_parser as stat
adjoint_error = stat("bc_adjoint.stat")["Fluid"]["AdjointVelocityError"]["l2norm"][-1]
    </variable>
  </variables>
  <pass_tests>
    <test name="forward_error very small" language="python">
assert abs(forward_error) &lt; 1.0e-14
    </test>
    <test name="adjoint_error very small" language="python">
assert abs(adjoint_error) &lt; 1.0e-14
    </test>
  </pass_tests>
  <warn_tests>
  </warn_tests>
</testproblem>

