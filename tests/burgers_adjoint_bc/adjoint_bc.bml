<?xml version='1.0' encoding='utf-8'?>
<burgers_equation>
  <simulation_name>
    <string_value lines="1">bc</string_value>
  </simulation_name>
  <geometry>
    <dimension>
      <integer_value rank="0">1</integer_value>
    </dimension>
    <mesh name="CoordinateMesh">
      <from_file file_name="mesh">
        <format name="triangle"/>
        <stat>
          <include_in_stat/>
        </stat>
      </from_file>
    </mesh>
    <mesh name="VelocityMesh">
      <from_mesh>
        <mesh name="CoordinateMesh"/>
        <stat>
          <exclude_from_stat/>
        </stat>
      </from_mesh>
    </mesh>
    <quadrature>
      <degree>
        <integer_value rank="0">4</integer_value>
      </degree>
    </quadrature>
  </geometry>
  <io>
    <dump_format>vtk</dump_format>
    <output_mesh name="VelocityMesh"/>
  </io>
  <timestepping>
    <current_time>
      <real_value rank="0">0.0</real_value>
    </current_time>
    <timestep>
      <real_value rank="0">1.0</real_value>
    </timestep>
    <finish_time>
      <real_value rank="0">1.0</real_value>
    </finish_time>
    <steady_state>
      <tolerance>
        <real_value rank="0">1.0e-13</real_value>
      </tolerance>
    </steady_state>
  </timestepping>
  <material_phase name="Fluid">
    <scalar_field name="Velocity" rank="0">
      <prognostic>
        <mesh name="VelocityMesh"/>
        <temporal_discretisation>
          <theta>
            <real_value rank="0">1.0</real_value>
          </theta>
          <relaxation>
            <real_value rank="0">1.0</real_value>
          </relaxation>
          <remove_time_term/>
        </temporal_discretisation>
        <solver>
          <iterative_method name="gmres">
            <restart>
              <integer_value rank="0">30</integer_value>
            </restart>
          </iterative_method>
          <preconditioner name="sor"/>
          <relative_error>
            <real_value rank="0">1.0e-16</real_value>
          </relative_error>
          <absolute_error>
            <real_value rank="0">1.0e-12</real_value>
          </absolute_error>
          <max_iterations>
            <integer_value rank="0">30000</integer_value>
          </max_iterations>
          <never_ignore_solver_failures/>
          <diagnostics>
            <monitors/>
          </diagnostics>
        </solver>
        <remove_advection_term/>
        <initial_condition name="WholeMesh">
          <constant>
            <real_value rank="0">0.0</real_value>
          </constant>
        </initial_condition>
        <boundary_conditions name="zero">
          <surface_ids>
            <integer_value shape="1" rank="1">1</integer_value>
          </surface_ids>
          <type name="dirichlet">
            <constant>
              <real_value rank="0">0.0</real_value>
            </constant>
          </type>
        </boundary_conditions>
        <boundary_conditions name="one">
          <surface_ids>
            <integer_value shape="1" rank="1">2</integer_value>
          </surface_ids>
          <type name="dirichlet">
            <constant>
              <real_value rank="0">1.0</real_value>
            </constant>
          </type>
        </boundary_conditions>
        <viscosity>
          <real_value rank="0">1.0</real_value>
        </viscosity>
        <stat/>
        <adjoint_storage>
          <exists_in_both/>
        </adjoint_storage>
      </prognostic>
    </scalar_field>
    <scalar_field name="AnalyticalVelocity" rank="0">
      <prescribed>
        <mesh name="VelocityMesh"/>
        <value name="WholeMesh">
          <python>
            <string_value lines="20" type="python">def val(X, t):
  return X[0]</string_value>
          </python>
        </value>
        <adjoint_storage>
          <exists_in_forward/>
        </adjoint_storage>
      </prescribed>
    </scalar_field>
    <scalar_field name="VelocityError" rank="0">
      <diagnostic>
        <mesh name="VelocityMesh"/>
        <algorithm name="scalar_python_diagnostic" material_phase_support="single">
          <string_value lines="20" type="python">soln = state.scalar_fields["Velocity"]
exact = state.scalar_fields["AnalyticalVelocity"]

field.val[:] = soln.val - exact.val</string_value>
        </algorithm>
        <stat/>
        <adjoint_storage>
          <exists_in_forward/>
        </adjoint_storage>
      </diagnostic>
    </scalar_field>
    <scalar_field name="AnalyticalAdjointVelocity" rank="0">
      <prescribed>
        <mesh name="VelocityMesh"/>
        <value name="WholeMesh">
          <python>
            <string_value lines="20" type="python">def val(X, t):
  x = X[0]
  if x == 0:
    return -1.0
  elif x == 1:
    return +1.0
  else:
    return -x</string_value>
          </python>
        </value>
        <adjoint_storage>
          <exists_in_adjoint/>
        </adjoint_storage>
      </prescribed>
    </scalar_field>
    <scalar_field name="AdjointVelocityError" rank="0">
      <diagnostic>
        <mesh name="VelocityMesh"/>
        <algorithm name="scalar_python_diagnostic" material_phase_support="single">
          <string_value lines="20" type="python">soln = state.scalar_fields["AdjointVelocity"]
exact = state.scalar_fields["AnalyticalAdjointVelocity"]

field.val[:] = soln.val - exact.val</string_value>
        </algorithm>
        <stat/>
        <adjoint_storage>
          <exists_in_adjoint/>
        </adjoint_storage>
      </diagnostic>
    </scalar_field>
  </material_phase>
  <adjoint>
    <functional name="dummy">
      <functional_derivative>
        <algorithm name="functional_derivative">
          <string_value type="python" lines="20"># FIXME: This python function is based on the old burgers schemer
coord  = states[n]["Fluid"].vector_fields["Coordinate"]
du = derivatives["FluidDerivatives"].scalar_fields["VelocityDerivative"]

du.val[:] = 0.0
for ele in range(du.element_count):
  X = coord.ele_val(ele)
  if X[0] &amp;lt;= 1.0 &amp;lt;= X[1]:
    t = Transform(ele, coord)
    dn = t.grad(du.ele_shape(ele))
    # dn.dn is loc x ngi x dim
    du.addto(du.ele_nodes(ele), dn.dn[:, 0, 0]) # first gauss point, first dimension -- we're 1D P1&lt;/string_value&gt;
      &lt;/algorithm&gt;
    &lt;/functional_derivative&gt;</string_value>
        </algorithm>
      </functional_derivative>
      <functional_dependencies>
        <algorithm name="functional_dependencies">
          <string_value type="python" lines="20"># FIXME: This python function is based on the old burgers schemer</string_value>
        </algorithm>
      </functional_dependencies>
    </functional>
  </adjoint>
</burgers_equation>
