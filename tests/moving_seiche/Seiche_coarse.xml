<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE testproblem SYSTEM "regressiontest.dtd">

<testproblem>
  <name>Moving Seiche</name>
  <owner userid="yves"/>
  <tags>flml</tags>
  <problem_definition length="medium" nprocs="1">
    <command_line>dfluidity -v3 -l --xml Seiche_coarse.flml &gt; /dev/null 2&gt;&amp;1</command_line>
  </problem_definition>
  <variables>
    <variable name="maxspeed" language="python">
import fluidity_tools
maxspeed =max(fluidity_tools.stat_parser("Seiche_Coarse.stat")['StratifiedFluid']['Velocity%magnitude']['max'])
    </variable>
  </variables>
  <pass_tests>
    <!-- l2norm should remain within 1% of a constant detemined analytically -->
    <test name="l2norm(speed) at last timestep" language="python">
assert abs(maxspeed) &lt; 0.30
    </test>
  </pass_tests>
  <warn_tests>
  </warn_tests>
</testproblem>
