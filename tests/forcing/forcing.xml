<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE testproblem SYSTEM "regressiontest.dtd">

<testproblem>
    <name>forcing</name>
  <owner userid="jhill1"/>
  <tags>flml</tags>
    <problem_definition length="short" nprocs="1">
    <command_line>fluidity -v3 -l forcing-column.flml</command_line>
  </problem_definition>  
  <variables>  
    <variable name="FinalTime" language="python">
import fluidity_tools
FinalTime = fluidity_tools.stat_parser("column-forcing.stat")['ElapsedTime']['value'][-1]
    </variable>
    <variable name="FinalTemperatureIntegral" language="python">
import fluidity_tools
FinalTemperatureIntegral = fluidity_tools.stat_parser("column-forcing.stat")['Fluid']['Temperature']['integral'][-1]
    </variable>
    <variable name="FirstTemperatureIntegral" language="python">
import fluidity_tools
FirstTemperatureIntegral = fluidity_tools.stat_parser("column-forcing.stat")['Fluid']['Temperature']['integral'][0]
    </variable>
    <variable name="FinalSalinityMin" language="python">
import fluidity_tools
FinalSalinityMin = fluidity_tools.stat_parser("column-forcing.stat")['Fluid']['Salinity']['min'][-1]
    </variable>
    <variable name="FinalVelocityMagnitudeMax" language="python">
import fluidity_tools
FinalVelocityMagnitudeMax = fluidity_tools.stat_parser("column-forcing.stat")['Fluid']['Velocity%magnitude']['max'][-1]
    </variable>
  
  </variables>    

  <pass_tests> 
    <test name="Final time is 1440 seconds" language="python">
assert FinalTime ==1440 
    </test>
    <test name="Final temperature integral has decreased" language="python">
assert((FinalTemperatureIntegral - FirstTemperatureIntegral) &gt; 10)
    </test>
    <test name="Final velocity%magnitude max has increased" language="python">
assert(FinalVelocityMagnitudeMax &gt; 0.0)
    </test>
    <test name="Final Salinity min less than 35" language="python">
assert FinalSalinityMin &lt; 35
    </test>

  </pass_tests>
</testproblem>
