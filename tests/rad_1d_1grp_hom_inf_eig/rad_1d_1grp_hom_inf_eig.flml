<?xml version='1.0' encoding='utf-8'?>
<fluidity_options>
  <simulation_name>
    <string_value lines="1">rad_1d_1grp_hom_inf_eig</string_value>
    <comment>Radiation problem:
- 1 dim
- 1 group
- 1 material (homogeneous)
- all reflective (infinite)
- eigenvalue run</comment>
  </simulation_name>
  <problem_type>
    <string_value lines="1">fluids</string_value>
  </problem_type>
  <geometry>
    <dimension>
      <integer_value rank="0">1</integer_value>
    </dimension>
    <mesh name="CoordinateMesh">
      <from_file file_name="rad_1d_1grp_hom_inf_eig">
        <format name="triangle"/>
        <stat>
          <include_in_stat/>
        </stat>
      </from_file>
    </mesh>
    <mesh name="VelocityMesh">
      <from_mesh>
        <mesh name="CoordinateMesh"/>
        <stat>
          <exclude_from_stat/>
        </stat>
      </from_mesh>
    </mesh>
    <quadrature>
      <degree>
        <integer_value rank="0">3</integer_value>
      </degree>
    </quadrature>
  </geometry>
  <io>
    <dump_format>
      <string_value>vtk</string_value>
    </dump_format>
    <dump_period>
      <constant>
        <real_value rank="0">1.0</real_value>
      </constant>
    </dump_period>
    <output_mesh name="CoordinateMesh"/>
    <stat/>
  </io>
  <timestepping>
    <current_time>
      <real_value rank="0">0.0</real_value>
    </current_time>
    <timestep>
      <real_value rank="0">1.0</real_value>
    </timestep>
    <finish_time>
      <real_value rank="0">1.0</real_value>
    </finish_time>
    <final_timestep>
      <integer_value rank="0">0</integer_value>
    </final_timestep>
  </timestepping>
  <material_phase name="dummy">
    <vector_field name="Velocity" rank="1">
      <prescribed>
        <mesh name="VelocityMesh"/>
        <value name="WholeMesh">
          <constant>
            <real_value shape="1" dim1="dim" rank="1">0.0</real_value>
          </constant>
        </value>
        <output/>
        <stat>
          <include_in_stat/>
        </stat>
        <detectors>
          <exclude_from_detectors/>
        </detectors>
      </prescribed>
    </vector_field>
  </material_phase>
  <radiation>
    <neutral_particle name="neutron">
      <mesh name="NeutralParticleMesh">
        <from_mesh>
          <mesh name="CoordinateMesh"/>
          <mesh_continuity>
            <string_value>continuous</string_value>
          </mesh_continuity>
          <stat>
            <exclude_from_stat/>
          </stat>
        </from_mesh>
      </mesh>
      <mesh name="NeutralParticleMaterialMesh">
        <from_mesh>
          <mesh name="CoordinateMesh"/>
          <mesh_shape>
            <polynomial_degree>
              <integer_value rank="0">0</integer_value>
            </polynomial_degree>
          </mesh_shape>
          <mesh_continuity>
            <string_value>discontinuous</string_value>
          </mesh_continuity>
          <stat>
            <exclude_from_stat/>
          </stat>
        </from_mesh>
      </mesh>
      <method name="MultiGroupDiffusion">
        <number_of_energy_groups>
          <integer_value rank="0">1</integer_value>
        </number_of_energy_groups>
        <scalar_field name="NeutralParticleFlux">
          <prognostic>
            <spatial_discretisation>
              <continuous_galerkin/>
            </spatial_discretisation>
            <solver>
              <iterative_method name="cg"/>
              <preconditioner name="sor"/>
              <relative_error>
                <real_value rank="0">1.0e-08</real_value>
              </relative_error>
              <max_iterations>
                <integer_value rank="0">100</integer_value>
              </max_iterations>
              <never_ignore_solver_failures/>
              <diagnostics>
                <monitors/>
              </diagnostics>
            </solver>
            <initial_condition name="WholeMesh">
              <constant>
                <real_value rank="0">1.0</real_value>
              </constant>
            </initial_condition>
            <boundary_conditions name="left">
              <surface_ids>
                <integer_value shape="1" rank="1">1</integer_value>
              </surface_ids>
              <type name="reflective"/>
            </boundary_conditions>
            <boundary_conditions name="right">
              <surface_ids>
                <integer_value shape="1" rank="1">2</integer_value>
              </surface_ids>
              <type name="reflective"/>
            </boundary_conditions>
            <output/>
            <stat/>
            <convergence>
              <include_in_convergence/>
            </convergence>
            <detectors>
              <include_in_detectors/>
            </detectors>
            <steady_state>
              <include_in_steady_state/>
            </steady_state>
            <consistent_interpolation/>
          </prognostic>
        </scalar_field>
      </method>
      <eigenvalue_run>
        <power_iteration>
          <maximum>
            <integer_value rank="0">100</integer_value>
          </maximum>
          <flux_tolerance>
            <real_value rank="0">1.0e-6</real_value>
          </flux_tolerance>
          <keff_tolerance>
            <real_value rank="0">1.0e-6</real_value>
          </keff_tolerance>
        </power_iteration>
        <flux_normalisation>
          <total_flux>
            <real_value rank="0">1.0</real_value>
          </total_flux>
        </flux_normalisation>
      </eigenvalue_run>
      <radiation_material_data_set_from_file file_name="rad_1d_1grp_hom_inf_eig">
        <number_of_scatter_moments>
          <integer_value rank="0">1</integer_value>
        </number_of_scatter_moments>
        <format_wims9plus>
          <maximum_record_length>
            <integer_value rank="0">132</integer_value>
          </maximum_record_length>
        </format_wims9plus>
        <physical_material name="fuel">
          <interpolation_dimension name="first">
            <interpolation_attribute_none/>
            <interpolation_values>
              <real_value shape="1" rank="1">1.0</real_value>
            </interpolation_values>
          </interpolation_dimension>
        </physical_material>
      </radiation_material_data_set_from_file>
      <region_id_material_mapping>
        <region_to_physical_radiation_material_map name="whole">
          <region_id>
            <integer_value shape="1" rank="1">1</integer_value>
          </region_id>
          <radiation_data_set_name file_name="rad_1d_1grp_hom_inf_eig"/>
          <radiation_physical_material_name name="fuel"/>
        </region_to_physical_radiation_material_map>
      </region_id_material_mapping>
    </neutral_particle>
  </radiation>
</fluidity_options>
