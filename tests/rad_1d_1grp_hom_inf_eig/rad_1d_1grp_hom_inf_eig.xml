<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE testproblem SYSTEM "regressiontest.dtd">

<testproblem>
  <name>rad_1d_1grp_hom_inf_eig</name>
  <owner userid="btollit"/>
  <tags>flml</tags>
  <problem_definition length="short" nprocs="1">
    <command_line>
       fluidity rad_1d_1grp_hom_inf_eig.flml 
    </command_line>
    <!-- Radiation diffusion eigenvalue problem with one material, one energy group with all reflective BC using a 1d geometry compared to analytic solution for the keff-->
  </problem_definition>
  <variables>
    <variable name="Keffneutron" language="python">
import vtktools
v = vtktools.vtu("rad_1d_1grp_hom_inf_eig_1.vtu")
Keffneutron = max(v.GetScalarRange("NeutralParticleKeffneutron"))
    </variable>
  </variables>
  <pass_tests>
    <test name="Check Keffneutron against analytic with tolerance 1.0e-06" language="python">
analytic_keff = 2.290323
print 'Relative error compared to analytic: ',abs((Keffneutron - analytic_keff)/analytic_keff)
assert abs((Keffneutron - analytic_keff)/analytic_keff) &lt; 1.0e-06
    </test>
  </pass_tests>
  <warn_tests>
  </warn_tests>
</testproblem>
