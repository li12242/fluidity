<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE testproblem SYSTEM "regressiontest.dtd">

<testproblem>
  <name>Visco-elastic solid block test</name>
  <owner userid="cwilson"/>
  <tags>flml solidity</tags>
    <problem_definition length="short" nprocs="1">
    <command_line>dfluidity -v1 -l lagrangian_elastic_slice.flml  </command_line>
  </problem_definition>  
  <variables>  
    <variable name="velocity" language="python">
import fluidity_tools
velocity = fluidity_tools.stat_parser("lagrangian_elastic_slice.stat")['Solid']['Velocity%magnitude']['max'][-1]
    </variable>    
    <variable name="mnpressure" language="python">
import fluidity_tools
mnpressure = fluidity_tools.stat_parser("lagrangian_elastic_slice.stat")['Solid']['Pressure']['min'][-1]
    </variable>    
    <variable name="mxpressure" language="python">
import fluidity_tools
mxpressure = fluidity_tools.stat_parser("lagrangian_elastic_slice.stat")['Solid']['Pressure']['max'][-1]
    </variable>    
  </variables>
    <pass_tests>  
    <test name="check maximum speed is less than 1e-2" language="python">
	assert abs(velocity) &lt; 1e-2
    </test>    
    <test name="check pressure difference is not zero (to see if pressure solution is happening)" language="python">
	assert abs(mxpressure-mnpressure) &gt; 1e-6
    </test>    
  </pass_tests>
  <warn_tests>
  </warn_tests>
</testproblem>
