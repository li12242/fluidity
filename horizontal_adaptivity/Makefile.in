SHELL = @SHELL@

FC      = @FC@
FCFLAGS = -I../include @MOD_FLAG@../include @FCFLAGS@

UTFC    = ../scripts/unittest_f90

CC      = @CC@
CFLAGS  = @CFLAGS@

CXX     = @CXX@
CXXFLAGS= @CXXFLAGS@

MAKE    = @MAKE@
AR  = @AR@
ARFLAGS = @ARFLAGS@

LIB = ../lib/lib@FLUIDITY@.a

TESTLIBS = $(shell echo @LIBS@ | sed 's@./lib/lib\([a-z]*\)\.a@-l\1@g')

# These are all the objects that are supposed to go into the makefile
OBJS = Extrude.o Extrude_radially.o Advancing_front.o Metric_based_extrude.o Combine_Meshes.o

.SUFFIXES: .F90 .c .o .a

.F90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) $(GENFLAGS) -c $< 
.cpp.o:
	@echo "        CXX $<"
	$(CXX) $(CXXFLAGS) -I../include -c $<

$(LIB): $(OBJS)
	@mkdir -p ../lib
	@$(AR) $(ARFLAGS) $(LIB) $(OBJS)
default: $(LIB)

clean:
	rm -f *.o *.mod

