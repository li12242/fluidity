# General Interpolation for Grids - GIG
SHELL = @SHELL@

VPATH=src

LIB = ../lib/lib@FLUIDITY@.a
AR = @AR@
ARFLAGS = @ARFLAGS@

CC  = @CC@

CXX = @CXX@
CXXFLAGS = -I./include -I../include @CXXFLAGS@ @CPPFLAGS@

FC = @FC@
FCFLAGS = -I../include @CPPFLAGS@ @FCFLAGS@

LINKER = $(CXX)

LFLAGS   = @LIBS@ @FLIBS@ @LDFLAGS@

OBJS = Picker.o Tri3toTri3.o Locator3D.o VerticalShellMapper.o

.SUFFIXES: .c .o .cpp .f90 .F90 .a .so

.f90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) -c $< || (rm $(LIB) && false)
.F90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) -c $< || (rm $(LIB) && false)
.c.o:
	@echo "        CC $<"
	$(CC) $(CFLAGS) -c $< || (rm $(LIB) && false)
.cpp.o:
	@echo "        CXX $<"
	$(CXX) $(CXXFLAGS) -c $< || (rm $(LIB) && false)

default: $(OBJS)
	$(AR) $(ARFLAGS) $(LIB) $(OBJS)

tests: $(OBJS) testTetra4toTetra4.o
	$(CXX) $(CXXFLAGS) -o testTetra4toTetra4 testTetra4toTetra4.o $(OBJS) $(LFLAGS)
	./testTetra4toTetra4 sph0.32.msh sph0.33.msh

testVerticalShellMapper: src/VerticalShellMapper.cpp include/projections.h include/VerticalShellMapper.h
	$(CXX) $(CXXFLAGS) -DTEST_VERTICALSHELLMAPPER -o testVerticalShellMapper \
          ./src/VerticalShellMapper.cpp ../lib/libspatialindex.a

testPicker: src/Picker.cpp include/projections.h include/Picker.h
	$(CXX) $(CXXFLAGS) -DTEST_PICKER -o testPicker \
          ./src/Picker.cpp ../lib/libspatialindex.a

documentation:
	cd doc; make

install:
	cp $(LIB).$(VERSION) $(PREFIX)/lib/

clean:
	rm -f testTetra4toTetra4 testTri3toTri3 *.o *.mod

