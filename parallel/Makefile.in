SHELL = @SHELL@

FC      = @FC@
FCFLAGS = -I../include @FCFLAGS@

MPIF90  = @MPIF90@

CC      = @CC@
CFLAGS  = @CFLAGS@

CXX     = @CXX@
# Pick up correct TinyXML
CXXFLAGS= @CPPFLAGS@ @CXXFLAGS@ -I../tinyxml -I../include

MAKE    = @MAKE@
AR  = @AR@
ARFLAGS = @ARFLAGS@

LIB = ../lib/lib@FLUIDITY@.a

# These are all the objects that are supposed to go into the makefile
OBJS = \
  MPI_Interfaces.o \
  Parallel_Tools.o

.SUFFIXES: .f90 .F90 .c .cpp .o .a

.f90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) -c $< || (rm $(LIB) && false)
.F90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) -c $< || (rm $(LIB) && false)
.c.o:
	@echo "        CC $<"
	$(CC) $(CFLAGS) -c $< || (rm $(LIB) && false)
.cpp.o:
	@echo "        CXX $<"
	$(CXX) $(CXXFLAGS) -c $< || (rm $(LIB) && false)

default: $(OBJS)
	$(AR) $(ARFLAGS) $(LIB) $(OBJS)
	cp *.mod ../include/

libparallel.a: $(OBJS)
	$(AR) $(ARFLAGS) libparallel.a $(OBJS)

FLComms.o: ../include/FLComms.h

FLComms_Fortran.o: Parallel_Tools.o

Parallel_Tools.o: MPI_Interfaces.o

change :
	cd ../; make

clean:
	rm -f *.o *.mod

